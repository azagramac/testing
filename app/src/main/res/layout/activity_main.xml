<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".MainActivity">

    <!-- Compass -->
    <dev.azagra.yourapp.CompassView
        android:id="@+id/compassView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/gridBottom"
        android:layout_margin="16dp" />

    <!-- SNR Graph -->
    <dev.azagra.yourapp.SnrGraphView
        android:id="@+id/snrGraphView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/compassView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <!-- Grid de 4 tarjetas -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Tarjeta 1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:background="?attr/colorSurface"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarjeta 1"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta 2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:background="?attr/colorSurface"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarjeta 2"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta 3 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:background="?attr/colorSurface"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarjeta 3"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Tarjeta 4 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            android:background="?attr/colorSurface"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarjeta 4"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
