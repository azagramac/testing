<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- BRÚJULA -->
    <dev.azagra.gps.CompassView
        android:id="@+id/compassView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35"/>

    <!-- GRÁFICO SNR -->
    <dev.azagra.gps.SnrGraphView
        android:id="@+id/snrGraph"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/compassView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"/>

    <!-- TARJETAS INFERIORES -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:rowCount="2"
        app:columnCount="2"
        app:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/snrGraph"
        app:layout_constraintBottom_toTopOf="@id/btnShareLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCoordinates"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="0"
            app:layout_column="0"
            android:layout_margin="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCoordinates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAltitude"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="0"
            app:layout_column="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvAltitude"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSatellites"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="1"
            app:layout_column="0"
            android:layout_margin="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSatellitesCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardUtcTime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_row="1"
            app:layout_column="1"
            android:layout_margin="4dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvUtcTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

    </androidx.gridlayout.widget.GridLayout>

    <!-- BOTÓN COMPARTIR UBICACIÓN -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnShareLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/share_location"
        android:icon="@drawable/ic_baseline_map_24"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
